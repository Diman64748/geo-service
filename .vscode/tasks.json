{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/local/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Python: create venv for tests",
            "command": "python3",
            "args": [
                "-m",
                "venv",
                "tests/.venv"
            ],
        },
        {
            "label": "Python: install requirements for tests",
            "command": "tests/.venv/bin/pip",
            "args": [
                "install",
                "-r",
                "tests/requirements.txt"
            ],
        },
        {
            "label": "Python: run tests",
            "command": "tests/.venv/bin/python",
            "args": [
                "tests/main.py"
            ],
        },
    ],
    "version": "2.0.0"
}